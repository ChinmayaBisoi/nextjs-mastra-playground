// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Example User model - adjust based on your needs
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PresentationStatus {
  DRAFT
  OUTLINE_GENERATED
  PPT_GENERATED
}

model Presentation {
  id               String             @id @default(cuid())
  userId           String
  description      String
  slideCount       Int
  webSearchEnabled Boolean            @default(false)
  outline          Json?
  status           PresentationStatus @default(DRAFT)
  pptFileUrl       String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  @@index([userId])
}

model Template {
  id           String           @id @default(cuid())
  userId       String
  name         String
  fileName     String
  fileUrl      String?
  templateSpec Json
  slidesJson   Json?
  images       Json?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  layouts      TemplateLayout[]

  @@index([userId])
}

model TemplateLayout {
  id         String   @id @default(cuid())
  templateId String
  template   Template @relation(fields: [templateId], onDelete: Cascade, references: [id])
  layoutId   String // e.g., "1", "2" for slide numbers
  layoutName String // e.g., "Slide1"
  layoutCode String // React component code
  html       String? // Original HTML
  fonts      Json? // Array of font URLs
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([templateId, layoutId])
  @@index([templateId])
}
